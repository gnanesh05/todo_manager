
           <section class="TodoSection">
                <div class="TodoSectionTitle">
                    <h2 class="TodoSubtitle"><%=section_title %></h2>
                    <p class="TodoSectionTitle-Count"><%=todos.completed.count%>/<%=todos.count%></p>
                </div>
                <ul class="TodoItem">

                <% todos.each do |todo|%>

                    <% if !(todo.completed && hide_completed)%>
                      <li>
                         
                            <div class="TodoItem-Container">
                                <%= form_with(url: "/todos/#{todo.id}", method: "PUT") do %>   
                                <input  
                                type="checkbox" 
                                name="completed"<%= todo.completed ? "checked" : "" %> 
                                onclick= "this.form.submit()"
                                >
                                
                                
                                <% end %>
                                
                                  <p class='<%= todo.completed ? "TodoCheckboxChecked" : "" %> '>
                                    <%= todo.todo_text %>
                                      </p>                                
                                 <% if show_due_date %>
                                <p class="TodoItem-DueDate"> <%= todo.due_date.to_s(:short)%></p>
                                <%end%>
                                <%= form_with(url: "/todos/#{todo.id}", method: "DELETE") do %>  
                                <input class="Img-Trash" type="image" src="delete.png">
                                <%end%>
                            </div>
                        
                      </li>
                    <%end%>
                <% end %>
                </ul>   
           </section>
