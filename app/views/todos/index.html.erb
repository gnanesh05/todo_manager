

 <main class="TodoMain">

        <article>
            <h1 class="TodoTitle">My Todo-List</h1>
            <section class="AddTodo">
              <%= form_with(url:"/todos", method: "post") do %>
                 <input class="AddTodo-Text" type="text" name="todo_text" placeholder="what's next?">
                 <input class="AddTodo-Date" type="date" name="due_date" placeholder="dd/mm/yyyy">
                 <input class="AddTodo-Button" value="Add" type="submit">
              <%end%>
            </section>

            <%= render partial: "todo-section", locals:{
                
            section_title: "Overdue",
            todos: Todo.overdue,
            show_due_date: false,
            hide_completed: true
        
            } %>

           <%= render partial: "todo-section", locals:{
            
            section_title: "Due Today",
            todos: Todo.due_today,
            show_due_date: true,
            hide_completed: false

            
            } %>

            <%= render partial: "todo-section", locals:{
                
            section_title: "Due Later",
            todos: Todo.due_later,
            show_due_date: true,
            hide_completed: false
            
            } %>
        </article>

    </main>
